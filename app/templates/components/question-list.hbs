<div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
        <ul class="list-unstyled">
          {{#each chapter.viewableQuestions as |question|}}
              <li class="question">
                <h3>{{question.title}}</h3>
                  <ul class="list-unstyled">
                    {{#if (if-eq question.type "input")}}
                      <li class="question-answer">
                          {{answer-tile/input option=option}}
                      </li>
                    {{else if (if-eq question.type "select")}}
                      {{#each question.options as |option|}}
                          <li class="question-answer">
                              {{answer-tile saveTag=(route-action "saveTag" member chapter question option) member=member chapter=chapter question=question option=option}}
                          </li>
                      {{/each}}
                    {{/if}}
                  </ul>
              </li>
          {{/each}}
        </ul>
    </div>
</div>
